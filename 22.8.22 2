// Online C compiler to run C program online
#include <stdio.h>

int main() 
{
	int a[100][100],i,j,r,c,sum;
	printf("Enter no of rows:");
	scanf("%d",&r);
	printf("\nEnter no of columns:");
	scanf("%d",&c);
	printf("\nEnter elements into array:\n");
	for(i=0;i<r;i++)
	{
		for(j=0;j<c;j++)
		{
			scanf("%d",&a[i][j]);
		}
	}
	for(i=0;i<r;i++)
	{
		sum=0;
		for(j=0;j<c;j++) 
		{
			sum=sum+a[j][i]	;
		}
		printf(" %d Col sum= %d \n",i+1,sum);
	 }
	return 0;
}

//output:
/tmp/mrnKNsCDX5.o
Enter no of rows:3
Enter no of columns:3
Enter elements into array:
1
2
3
4
5
6
7
8
9
