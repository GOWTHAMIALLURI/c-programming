// Online C compiler to run C program online
#include <stdio.h>
int main() 
{

 int x,y,n,r,sum=0,count=1;
 printf("enter n value:");
 scanf("%d",&n);
 printf("enter x and y value:\n");
 scanf("%d%d",&x,&y);
 while(n>0)
{
 r=n%10;
  if(r==x)
 {
  r=y;
 }
 sum=(sum)+(r*count);
 count=count*10;
 n=n/10;
 }
 printf("%d",sum);
 return 0;
}


output:
enter n value:16918
enter x and y value:
1
7
76978
